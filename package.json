{
  "name": "a11yphant",
  "version": "0.0.1",
  "description": "",
  "author": "Michael Brandst√§tter | Thomas Dax | Daniela Kubesch | Luca Pircher",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prepare": "husky install",
    "postinstall": "npm run package-dependencies && npm run tf:init",
    "package-dependencies": "npm-run-all package-dependencies:**",
    "package-dependencies:nestjs-aws-messaging": "npm --prefix packages/nestjs-aws-messaging install",
    "package-dependencies:api": "npm --prefix services/api install",
    "package-dependencies:site": "npm --prefix services/site install",
    "package-dependencies:submission-checker": "npm --prefix services/submission-checker install",
    "build-packages": "npm-run-all build-packages:**",
    "build-packages:nestjs-aws-messaging": "npm --prefix packages/nestjs-aws-messaging run build",
    "dotenv": "dotenv",
    "lint": "npm-run-all lint:**",
    "lint:api": "npm --prefix services/api run lint",
    "lint:site": "npm --prefix services/site run lint",
    "lint:submission-checker": "npm --prefix services/submission-checker run lint",
    "lint:content": "yamllint challenges/*.yml",
    "lint-staged": "lint-staged",
    "start": "npm run dev",
    "predev": "npm run build-packages &&  npm run tf:clear-state && npm run tf:apply && npm run db:migrate",
    "dev": "pm2 start pm2-ecosystem.config.js",
    "dev:no-daemon": "node pm2-start-no-daemon.js",
    "stop": "pm2 stop a11yphant && pm2 del a11yphant",
    "dev:api": "npm run package-dependencies:api && npm --prefix services/api run start:dev",
    "dev:site": "npm run package-dependencies:site && wait-on -l tcp:$API_PORT && npm --prefix services/site run dev",
    "dev:submission-checker": "npm run package-dependencies:submission-checker && npm --prefix services/submission-checker run start:dev",
    "debug:api": "pm2 logs a11yphant-api",
    "debug:site": "pm2 logs a11yphant-site",
    "debug:submission-checker": "pm2 logs a11yphant-submission-checker",
    "tf": "docker-compose run --rm terraform -chdir=terraform/local",
    "tf:init": "npm run tf init",
    "tf:apply": "npm run tf apply -- -auto-approve",
    "tf:destroy": "npm run tf destroy -- -auto-approve",
    "tf:clear-state": "rm -f terraform/local/terraform.tfstate*",
    "db:migrate": "docker-compose up -d postgres && npm --prefix services/api run prisma:migrate",
    "gitlab-registry:login": "npm config set -- //gitlab.mediacube.at/api/v4/projects/5907/packages/npm/:_authToken"
  },
  "repository": {
    "type": "git",
    "url": "https://gitlab.mediacube.at/a11yphant/a11yphant.git"
  },
  "keywords": [],
  "devDependencies": {
    "@nestjs/common": "7.6.18",
    "@nestjs/core": "7.6.18",
    "@typescript-eslint/parser": "4.28.0",
    "dotenv-cli": "4.0.0",
    "husky": "6.0.0",
    "lint-staged": "11.0.0",
    "npm-run-all": "4.1.5",
    "pm2": "5.1.0",
    "reflect-metadata": "0.1.13",
    "rxjs": "6.6.7",
    "typescript": "4.3.4",
    "wait-on": "5.3.0",
    "yaml-lint": "1.2.4"
  },
  "dependencies": {}
}
